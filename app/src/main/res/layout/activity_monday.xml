<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_rcv"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Monday"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:src="@drawable/ic_baseline_arrow_back_new"
            android:layout_margin="20dp"
            android:id="@+id/back"
            app:tint="#FF6374"></ImageView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TimeTable"
            android:gravity="end"
            android:layout_gravity="center"
            android:textSize="36dp"
            android:fontFamily="@font/montserrat"
            android:layout_margin="20dp"
            android:textColor="#FF6374"
            ></TextView>
        </LinearLayout>
        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:lottie_rawRes="@raw/anim2"
            android:id="@+id/anim1"
            app:lottie_loop="true"
            app:lottie_autoPlay="true"
            android:layout_gravity="center"
            android:visibility="invisible"
            />
    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="80dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rclview"></androidx.recyclerview.widget.RecyclerView>
    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>