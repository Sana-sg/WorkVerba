<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddNotesActivity"
    android:background="@drawable/addbck">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/addbck">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="36dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="Edit Note"
            android:textColor="@color/white"
            android:textSize="40dp"
            android:textStyle="bold"
            android:textFontWeight="800"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
                ></TextView>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/title1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Title"
        app:startIconDrawable="@drawable/ic_baseline_topic_24"
        android:textSize="20dp"
        app:startIconTint="#FF6374"
        android:inputType="text"
        android:padding="10dp"
        app:hintTextColor="#EB3349"
        app:boxStrokeColor="#EB3349"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="300dp"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:id="@+id/title"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/description1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Description"
        app:startIconDrawable="@drawable/ic_description"
        android:textSize="20dp"
        app:startIconTint="#FF6374"
        android:inputType="text"
        android:padding="10dp"
        app:hintTextColor="#EB3349"
        app:boxStrokeColor="#EB3349"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="3dp"
        android:layout_below="@id/title1"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:id="@+id/description"/>
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="Update "
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_below="@id/description1"
        android:layout_centerInParent="true"
        android:layout_marginTop="100dp"
        android:id="@+id/updateNote"
        android:background="@drawable/buttonstyle"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="@color/white"
        ></androidx.appcompat.widget.AppCompatButton>
</RelativeLayout>
</RelativeLayout>